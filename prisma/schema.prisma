datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Appointment {
  id          Int      @id @default(autoincrement())
  email       String
  date        DateTime @default("2020-03-19T14:21:00+02:00")
  service     String
  staff       String
  isPublished Boolean  @default(false)
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Int
  stock       Int
}

model Service {
  id       Int    @id @default(autoincrement())
  name     String
  duration Int
  price    Int
}

model Customer {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String
  phone     Int
}

model Staff {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String
  phone     Int
}
